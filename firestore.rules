rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is signed in
    function isSignedIn() {
      return request.auth != null;
    }

    // Users collection: Users can read/write their own data
    match /users/{userId} {
      allow read: if isSignedIn();
      allow write: if isSignedIn() && request.auth.uid == userId;
    }

    // Videos collection: Everyone can read. 
    // Ideally, only admins should write. For now, allowing all signed-in users 
    // but the UI restricts it. Warning: Secure this for production!
    match /videos/{videoId} {
      allow read: if true;
      // Allow create only if signed in (AdminDashboard uses signed in user)
      allow create: if isSignedIn(); 
      // Allow update mostly for like counts (this is open, but simpler for now)
      allow update: if isSignedIn();
      
      // Comments subcollection
      match /comments/{commentId} {
        allow read: if true;
        allow create: if isSignedIn();
      }
    }

    // User Likes
    match /user_likes/{likeId} {
      allow read, write: if isSignedIn();
    }
  }
}
